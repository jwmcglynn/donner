{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "on the 1st through 7th day of the month"
  ],
  "labels": [
    "bot"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "com_google_absl"
      ],
      "digest": {
        "enabled": false
      }
    },
    {
      "matchDepNames": [
        "imgui"
      ],
      "digest": {
        "enabled": false
      }
    }
  ],
  "ignorePaths": [
    "**/third_party/doxygen-awesome-css/**"
  ]
}
