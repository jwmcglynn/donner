filegroup(
    name = "fonts",
    srcs = glob([
        "fonts/**",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "resources",
    srcs = glob([
        "resources/**",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "tests",
    srcs = glob([
        "tests/**/*.png",
        "tests/**/*.svg",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)
