filegroup(
    name = "fonts",
    srcs = glob([
        "fonts/**",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "images",
    srcs = glob([
        "images/**",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "svg",
    srcs = glob([
        "svg/**/*.svg",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "png",
    srcs = glob([
        "png/**/*.png",
    ],
        allow_empty = False,
    ),
    visibility = ["//visibility:public"],
)
