filegroup(
    name = "svg",
    srcs = glob([
        "svg/*.svg",
    ]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "png",
    srcs = glob([
        "png/*.png",
    ]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "images",
    srcs = glob([
        "images/*.*",
    ]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "fonts",
    srcs = glob([
        "fonts/*.*",
    ]),
    visibility = ["//visibility:public"],
)
