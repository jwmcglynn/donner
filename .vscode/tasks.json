{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Doxygen",
      "type": "shell",
      "command": "tools/doxygen.sh",
      "problemMatcher": {
        "owner": "c",
        "fileLocation": [
          "absolute"
        ],
        "pattern": {
          "regexp": "^(.+):([0-9]+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "revealProblems": "always"
      }
    },
    {
      "label": "xml_tool",
      "type": "shell",
      "command": "bazel",
      "problemMatcher": [],
      "args": [
        "run",
        "-c",
        "dbg",
        "--config=asan",
        "//donner/svg/xml:xml_tool",
        "--",
        "${workspaceFolder}/donner/svg/xml/testdata/e-path-034.svg"
      ],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "svg (all)",
      "type": "shell",
      "command": "bazel test -c dbg //donner/svg/...",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "all",
      "type": "shell",
      "command": "bazel build //...",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "svg_tests",
      "type": "shell",
      "command": "bazel run -c dbg //donner/svg/tests:svg_tests",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "test",
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "css (all)",
      "type": "shell",
      "command": "bazel test //donner/css/... -c dbg",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "test"
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "all tests",
      "type": "shell",
      "command": "bazel test //... -c dbg",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "test",
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "base_tests",
      "type": "shell",
      "command": "bazel build //donner/base:base_tests -c dbg",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "renderer_tool",
      "type": "shell",
      "command": "bazel run -c dbg //donner/svg/renderer:renderer_tool -- ${workspaceFolder}/src/svg/renderer/testdata/Ghostscript_Tiger.svg",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "test",
      "presentation": {
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "renderer_tests",
      "type": "shell",
      "command": "bazel run -c dbg //donner/svg/renderer/tests:renderer_tests",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "test"
    },
    {
      "label": "base_parser_tests",
      "type": "shell",
      "command": "bazel build //donner/base/parser:parser_tests -c dbg",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "core_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/core:core_tests -c dbg",
      "problemMatcher": []
    },
    {
      "label": "svg_parser_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/parser:parser_tests -c dbg",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "svg_parser_tests (run)",
      "type": "shell",
      "command": "bazel run //donner/svg/parser:parser_tests -c dbg",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "components_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/components:components_tests -c dbg",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "properties_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/properties/tests:properties_tests -c dbg",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "xml_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/xml:xml_tests -c dbg",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "xml_details_tests",
      "type": "shell",
      "command": "bazel build //donner/svg/xml:xml_details_tests -c dbg",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "svg_tests",
      "type": "shell",
      "command": "bazel run //donner/svg/tests:svg_tests -c dbg",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "css_parser_tests",
      "type": "shell",
      "command": "bazel build //donner/css/parser:parser_tests -c dbg",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}
